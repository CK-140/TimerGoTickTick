<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home_fragment">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroyextrabold"
            android:text="Welcome to\nTimers galore"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="48dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/custom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom"
            android:textSize="25sp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/covid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="covid"
            android:textSize="25sp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/custom_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quickie_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quickie"
            android:textSize="25sp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/covid_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
